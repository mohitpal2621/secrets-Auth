<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <%userWithSecrets.forEach(user => {%>
      <%user.Secret.forEach(secret => {%>

        <p class="secret-text"><%= secret %></p>

      <%})%>
    <%})%>
    <hr>
    <!-- Safer to do a post request for logouts instead of Get requests -->
    <form action="/logout" method="POST"> 
      <button class="btn btn-light btn-lg" type="submit">Log Out</button>
    </form>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
